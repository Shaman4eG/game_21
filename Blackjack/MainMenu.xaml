<Page x:Class="Blackjack.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Blackjack"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="900"
      Title="MainMenu">

    <Grid>
        <TextBlock Name="ErrorText" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,160" Foreground="Red"/>
        <TextBox Name="UserNameInput"  HorizontalAlignment="Center" Height="25" Margin="0,0,0,100" TextWrapping="Wrap" VerticalAlignment="Center" Width="236" FontSize="16"/>
        <Button Content="Login" HorizontalAlignment="Center" Margin="0,0,125,0" VerticalAlignment="Center" Width="75" Click="Login_Click"/>
        <Button Content="Register" HorizontalAlignment="Center" Margin="125,0,0,0" VerticalAlignment="Center" Width="75" Click="Register_Click"/>

    </Grid>
</Page>
